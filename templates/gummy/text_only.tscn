func autosize_font(min_size: int, max_size: int):
	var low = min_size
	var high = max_size
	var best_fit = min_size
	while low <= high:
		var mid = (low + high) / 2
		add_theme_font_size_override(\"normal_font_size\", mid)
		var fits = get_content_height() <= (get_parent().size.y - 200)
		if fits:
			best_fit = mid
			low = mid + 1
		else:
			high = mid - 1
	add_theme_font_size_override(\"normal_font_size\", best_fit)
